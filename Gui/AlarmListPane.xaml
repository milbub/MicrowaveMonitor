<UserControl x:Class="MicrowaveMonitor.Gui.AlarmListPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrowaveMonitor.Gui"
             mc:Ignorable="d">
    <TabControl x:Name="warningsTabControl" Background="LightGray" Margin="5">
        <TabItem Header="Current">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Current alarm count:"></Label>
                    <Label Content="0"></Label>
                </StackPanel>
                <ListBox x:Name="AlarmsList" Background="LightGray" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Acknowledged">

        </TabItem>
        <TabItem Header="Suspended">

        </TabItem>
    </TabControl>
</UserControl>
