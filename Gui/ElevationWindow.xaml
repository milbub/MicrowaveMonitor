<Window x:Class="MicrowaveMonitor.Gui.ElevationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Terrain Elevation" Height="300" Width="600"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Distance between sites A and B:"></Label>
        <Label x:Name="distance" Margin="173,0,0,0" FontWeight="Bold"></Label>
        <Label x:Name="error" Visibility="Hidden" Grid.Row="2" Content="This link has only single site!" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <Image x:Name="graph" Grid.Row="1" HorizontalAlignment="Left" Stretch="None"></Image>
    </Grid>
</Window>
